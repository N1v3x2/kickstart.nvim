root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{js,ts,html}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{c,cpp,hpp,h,cc}]
indent_style = space
indent_size = 4

[*.{r,rmd}]
indent_style = space
indent_size = 2
